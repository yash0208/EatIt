<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#101218"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recipe">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/back_button"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:layout_gravity="left|center_vertical"
                    android:layout_height="40dp"/>
                <TextView
                    android:textColor="@color/white"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="15dp"
                    android:id="@+id/veg"
                    android:visibility="gone"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/back_button"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/veg"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:text="Veg"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/white"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="15dp"
                    android:id="@+id/nonveg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:background="@drawable/back_button"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/fat"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:text="Non Veg"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="50dp"
                android:id="@+id/name"
                android:layout_marginRight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/nunito_semibold"
                android:id="@+id/src"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_baseline_menu_book_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp"
                android:layout_height="170dp">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/image"
                    android:background="@color/white"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="60dp"
                    android:background="@drawable/back_button"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_access_time_24_1"
                            android:layout_height="30dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:id="@+id/time"
                            android:text="45 Min"
                            android:textColor="#ffffff"
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="60dp"
                    android:background="@drawable/back_button"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/heart"
                            android:layout_height="30dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:id="@+id/heart"
                            android:text="19.0"
                            android:textColor="#ffffff"
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/back_button"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/rupee"
                            android:layout_height="30dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:text="163.50"
                            android:id="@+id/price"
                            android:textColor="#ffffff"
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:id="@+id/tab_layout"
                app:tabMode="fixed"
                app:tabTextAppearance="@style/tab_text"
                android:layout_marginTop="10dp"
                app:tabGravity="center"
                app:tabIndicatorGravity="stretch"
                app:tabSelectedTextColor="#D07843"
                android:layout_gravity="center"
                app:tabIndicatorHeight="20dp"
                android:foregroundGravity="center"
                app:tabTextColor="#52555B"
                app:tabIndicatorColor="@color/light"
                app:tabIndicator="@drawable/card"
                app:tabIndicatorAnimationMode="elastic"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:id="@+id/ins"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Instructions : "
                        android:textColor="#D07843"
                        android:fontFamily="@font/nunito_bold"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:drawablePadding="5dp"
                        android:id="@+id/ins1"
                        android:textSize="20dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:textColor="@color/white"
                        android:text="Calories Per Serving"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Summary : "
                        android:textColor="@color/white"
                        android:fontFamily="@font/nunito_bold"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:drawablePadding="5dp"
                        android:id="@+id/sum1"
                        android:visibility="gone"
                        android:textSize="20dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:textColor="@color/white"
                        android:text="Calories Per Serving"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </FrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/ingredients"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/steps"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:background="@drawable/back_button"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="22dp"
                        android:text="Ingredients :"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="22dp"
                        android:text="Instructions :"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="18dp"
                        android:id="@+id/instruction"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="22dp"
                        android:text="Credits Text :"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:id="@+id/credit"
                        android:textSize="18dp"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="22dp"
                        android:text="Summary:"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:id="@+id/summary"
                        android:textSize="18dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/nutritions1"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="200dp"
                            android:src="@drawable/eating_healthy_food_amico"
                            android:layout_height="200dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="210dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:drawablePadding="5dp"
                                android:layout_marginTop="10dp"
                                android:id="@+id/fiber"
                                android:textSize="30dp"
                                android:fontFamily="@font/nunito_bold"
                                android:textColor="@color/white"
                                android:text="151"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:drawablePadding="5dp"
                                android:id="@+id/dsa"
                                android:textSize="20dp"
                                android:fontFamily="@font/nunito_semibold"
                                android:textColor="@color/white"
                                android:text="Calories Per Serving"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:drawableLeft="@drawable/fat"
                                android:drawablePadding="5dp"
                                android:id="@+id/fat"
                                android:fontFamily="@font/nunito_semibold"
                                android:textColor="@color/white"
                                android:text="8 g fat"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:drawableLeft="@drawable/protine"
                                android:drawablePadding="5dp"
                                android:layout_marginTop="10dp"
                                android:id="@+id/protine"
                                android:fontFamily="@font/nunito_semibold"
                                android:textColor="@color/white"
                                android:text="8 g fat"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:drawableLeft="@drawable/carbs"
                                android:drawablePadding="5dp"
                                android:id="@+id/carbs"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/nunito_semibold"
                                android:textColor="@color/white"
                                android:text="8 g fat"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </FrameLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Detailed Nutrition Info : "
                        android:textColor="@color/white"
                        android:fontFamily="@font/nunito_bold"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/nutritions"
                        android:visibility="visible"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                   </LinearLayout>


            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:text="Detailed Review"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:background="@drawable/button"
                android:paddingLeft="10dp"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="30dp"
                android:paddingRight="10dp"
                android:id="@+id/open"
                android:drawableRight="@drawable/ic_baseline_menu_book_24"
                android:drawablePadding="10dp"
                android:layout_height="40dp"/>
        </LinearLayout>

    </ScrollView>
</FrameLayout>